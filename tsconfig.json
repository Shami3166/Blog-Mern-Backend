{
  "compilerOptions": {
    "target": "ES2020",               
    "module": "commonjs",            
    "outDir": "dist",                // ✅ compiled .js files go into dist/
    "rootDir": "src",                // ✅ all your source code is in src/
    "strict": true,                  
    "esModuleInterop": true,         
    "skipLibCheck": true,
           "typeRoots": ["./src/types", "./node_modules/@types"]
  },
     "include": ["src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}

